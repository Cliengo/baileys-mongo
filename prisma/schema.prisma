datasource db {
  provider = "postgresql" // Cambia "mongodb" a "postgresql"
  url      = env("POSTGRESQL_DB_URL") // Define tu URL de conexión de PostgreSQL
}

generator client {
  provider = "prisma-client-js"
}


model Auth {
  id    Int     @id @default(autoincrement())
  key   String  @unique
  value String  // Cambia "TEXT" si deseas una longitud máxima específica
}

